<%= javascript_include_tag 'repositories_remote_select.js' %>
<%= form_for :repository,
             remote: true,
             url: { controller: '/repositories',
                    action: (@repository && @repository.new_record?) ? 'create' : 'update',
                    id: @project },
             builder: TabularFormBuilder,
             html: { class: 'form' } do |f| %>

    <%= error_messages_for 'repository' %>

    <div class="form--field -required">
      <%= label_tag('scm_vendor', l('repositories.scm_vendor'), class: "form--label") %>
      <div class="form--field-container">
        <div class="form--select-container -middle">
          <%= scm_vendor_tag(@repository) %>
        </div>
      </div>
    </div>
    <% unless @repository.nil? %>
        <div class="form--field -required">
          <label class="form--label" for="scm_type">
            <%= l('repositories.scm_type') %>
          </label>

          <div class="form--field-container">
            <div class="form--select-container -middle">
              <%= scm_type_tag(@repository, @repository.scm_type) %>
            </div>
          </div>
        </div>
    <% end %>

    <% unless @repository.nil? || @repository.scm_type.nil? %>
        <%= render partial: "/repositories/settings/#{vendor_name(@repository)}/#{@repository.scm_type}",
                   locals: { form: f, repository: @repository } %>

        <div class="contextual">
          <% unless @repository.new_record? %>
              <%= link_to(l(:label_user_plural), { :controller => '/repositories', :action => 'committers', :project_id => @project }, :class => 'icon icon-user1') %>
              <%= link_to(l(:button_delete), project_repository_path(@project),
                          :confirm => l(:text_are_you_sure),
                          :method => :delete,
                          :class => 'icon icon-delete') %>
          <% end %>
        </div>

        <hr class="form--separator">
        <button class="button -highlight">
          <i class="button--icon icon-yes"></i>
          <span class="button--text">
            <%= @repository.new_record? ? l(:button_create) : l(:button_save) %>
          </span>
        </button>
    <% end %>
<% end %>
